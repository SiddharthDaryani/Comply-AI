{
  "manifest_version": 3,
  "name": "Comply AI",
  "version": "1.0",
  "description": "Real-time social media compliance checker",
  "icons": {
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab"
  ],
  "host_permissions": [
    "http://localhost:8000/*"
  ],
  "content_scripts": [
    {
      "matches": [
        "https://*.linkedin.com/*",
        "https://x.com/*",
        "https://twitter.com/*"
      ],
      "js": ["content.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_title": "Comply AI"
  }
}